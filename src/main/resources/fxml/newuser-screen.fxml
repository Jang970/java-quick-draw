<VBox alignment="TOP_CENTER" prefHeight="570.0" prefWidth="600.0" spacing="10.0" stylesheets="@../css/application.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controllers.NewUserScreenController">
   <children>
      <Label styleClass="headers" text="Quick, Draw!" textFill="#668cff">
         <font>
            <Font size="40.0" />
         </font>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Label>
      <Label layoutX="217.0" layoutY="48.0" styleClass="headers" text="SE206 Edition" textFill="#668cff">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets top="-10.0" />
         </VBox.margin>
      </Label>
      <Pane fx:id="newUserPane" prefHeight="565.0" prefWidth="600.0">
         <children>
            <ImageView fitHeight="428.0" fitWidth="621.0" layoutX="-8.0" pickOnBounds="true" preserveRatio="true" styleClass="splash" />
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="-10.0" layoutY="8.0" prefHeight="24.0" prefWidth="616.0" styleClass="subHeaders" text="Please enter a username and choose your favourite color" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="usernameTextField" focusTraversable="false" layoutX="85.0" layoutY="164.0" maxWidth="335.0" prefHeight="33.0" prefWidth="374.0" promptText="Username" styleClass="subHeaders">
               <font>
                  <Font size="19.0" />
               </font>
            </TextField>
            <ColorPicker fx:id="colorPicker" layoutX="177.0" layoutY="217.0">
               <value>
                  <Color opacity="0.0" />
               </value>
            </ColorPicker>
            <HBox prefHeight="100.0" prefWidth="200.0" />
            <Button fx:id="createProfileButton" alignment="CENTER" layoutX="222.0" layoutY="395.0" mnemonicParsing="false" onAction="#onCreateProfile" prefHeight="33.0" prefWidth="156.0" stylesheets="@../css/application.css" text="Create profile" textAlignment="CENTER">
               <font>
                  <Font size="26.0" />
               </font>
            </Button>
            <Button fx:id="backButton" layoutX="148.0" layoutY="395.0" mnemonicParsing="false" onAction="#onBackToProfile" text="Back" visible="false" />
         </children>
      </Pane>
   </children>
</VBox>
