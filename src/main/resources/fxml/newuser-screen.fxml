<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<Pane centerShape="false" prefHeight="700.0" prefWidth="900.0" stylesheets="@../css/application.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controllers.NewUserScreenController">
   <children>
      <ImageView fitHeight="700.0" fitWidth="900.0" pickOnBounds="true" preserveRatio="true" styleClass="newUserScreen" />
      <Label layoutX="236.0" styleClass="headers" text="Quick, Draw!">
         <font>
            <Font size="70.0" />
         </font>
      </Label>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="134.0" layoutY="289.0" prefHeight="24.0" prefWidth="616.0" styleClass="subHeaders" text="PLEASE ENTER USERNAME AND PICK YOUR FAVOURITE COLOUR" textAlignment="CENTER" wrapText="true">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
      <TextField fx:id="usernameTextField" focusTraversable="false" layoutX="243.0" layoutY="342.0" maxWidth="411.0" prefHeight="44.0" prefWidth="411.0" promptText="Username (20 characters max)" styleClass="subHeaders">
         <font>
            <Font size="25.0" />
         </font>
      </TextField>
      <ColorPicker fx:id="colorPicker" layoutX="242.0" layoutY="417.0" prefHeight="43.0" prefWidth="409.0">
         <value>
            <Color opacity="0.0" />
         </value>
      </ColorPicker>
      <Button fx:id="createProfileButton" alignment="CENTER" layoutX="357.0" layoutY="493.0" mnemonicParsing="false" onAction="#onCreateProfile" prefHeight="45.0" prefWidth="189.0" stylesheets="@../css/application.css" text="CREATE PROFILE" textAlignment="CENTER">
         <font>
            <Font size="26.0" />
         </font>
      </Button>
      <Button fx:id="backButton" layoutX="136.0" layoutY="207.0" mnemonicParsing="false" onAction="#onBackToProfile" text="Back" />
   </children>
</Pane>
