	"version": "2.0.0",
	"tasks": [
		{
			"label": "run",
			"type": "shell",
			"command": "./mvnw javafx:run",
			"windows": {
				"command": ".\\mvnw javafx:run"
			},
			"group": { "kind": "build", "isDefault": true }
		},
		{
			"label": "test",
			"type": "shell",
			"command": "./mvnw test",
			"windows": {
				"command": ".\\mvnw test "
			},
			"group": "test"
		}
	]
}
