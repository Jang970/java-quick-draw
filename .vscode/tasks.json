{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "run:debug",
			"type": "shell",
			"command": "./mvnw clean javafx:run@debug",
			"windows": {
				"command": ".\\mvnw clean javafx:run@debug"
			},
			"group": "build",
			"isBackground": true,
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": [
				{
					"pattern": [
						{
							"regexp": ".*",
							"file": 1,
							"line": 1,
							"column": 1,
							"message": 1
						}
					],
					"background": {
						"activeOnStart": false,
						"beginsPattern": {
							"regexp": "."
						},
						"endsPattern": {
							"regexp": ".*Listening for transport dt_socket at address: 5005.*"
						}
					}
				}
			]
		},
		{
			"label": "run",
			"type": "shell",
			"command": "./mvnw clean javafx:run",
			"windows": {
				"command": ".\\mvnw clean javafx:run"
			},
			"group": "build"
		},
		{
			"label": "test",
			"type": "shell",
			"command": "./mvnw clean test",
			"windows": {
				"command": ".\\mvnw clean test"
			},
			"group": "test"
		},
		{
			"label": "stop debugging",
			"type": "shell",
			"command": "echo ${input:terminate}"
		}
	],
	"inputs": [
		{
			"id": "terminate",
			"type": "command",
			"command": "workbench.action.tasks.terminate",
			"args": "terminateAll"
		}
	]
}
